{
    "resources": {
        "http://example.org/rel/widget": {
            "hints": {
                "accept-patch": [
                    "application/json-patch"
                ], 
                "accept-post": [
                    "application/xml"
                ], 
                "accept-ranges": [
                    "bytes"
                ], 
                "allow": [
                    "GET", 
                    "PUT", 
                    "DELETE", 
                    "PATCH"
                ], 
                "representations": [
                    "application/json"
                ]
            }, 
            "href-template": "/widgets/{widget_id}", 
            "href-vars": {
                "widget_id": "http://example.org/param/widget"
            }
        }, 
        "http://example.org/rel/widgets": {
            "href": "/widgets/"
        }
    }
}
